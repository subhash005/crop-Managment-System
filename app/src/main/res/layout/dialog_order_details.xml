<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminOrderAdapter">

    <!-- CardView for better aesthetics -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- Order ID -->

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: ----"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- User Name -->
            <TextView
                android:id="@+id/orderUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- User Phone Number -->
            <TextView
                android:id="@+id/orderUserNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Number: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Delivery Address -->
            <TextView
                android:id="@+id/orderDeliveryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Payment Status -->
            <TextView
                android:id="@+id/orderPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Status: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Total Amount -->
            <TextView
                android:id="@+id/ordertotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Delivery Status -->
            <TextView
                android:id="@+id/deliveryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Status: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Payment Method -->
            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Order Date -->
            <TextView
                android:id="@+id/orderdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Payment Date -->
            <TextView
                android:id="@+id/orderpaymentDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Date: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Payment ID -->
            <TextView
                android:id="@+id/orderpayment_Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment ID: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Cart Items RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
