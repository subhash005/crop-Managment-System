<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".category_admin">

    <!-- Background and decoration elements can go here if needed -->

    <!-- Title for adding a new category -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add New Category"
        android:layout_above="@+id/cate"
        android:textColor="#55983E"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Linear layout centered with input fields and button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/cate"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- EditText for category name input -->
        <EditText
            android:id="@+id/categoryNameInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/custom_edittext_background"
            android:drawableStart="@drawable/baseline_add_shopping_cart_24"
            android:drawablePadding="10dp"
            android:hint="Category Name"
            android:padding="10dp"
            android:textColorHint="#A4A6A3"
            android:layout_marginBottom="20dp" />

        <!-- Button to add the category -->
        <Button
            android:id="@+id/addCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_login_btn_background"
            android:text="Add Category"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:src="@drawable/leaf2" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="190dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-48dp"
        android:src="@drawable/leaf2k1" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-22dp"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="565dp"
        android:src="@drawable/cloverk5" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="562dp"
        android:src="@drawable/logo2" />

</RelativeLayout>
