<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardElevation="6dp"
    cardview:cardCornerRadius="14dp"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: ----"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogUserNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone no: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogDeliveryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Status: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogOrderDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Date: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogDeliveryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Status: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogPaymentId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment ID: ----"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dialogCartItemsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart Items:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dialogRvCartItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
