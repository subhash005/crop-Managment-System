<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Order Details Section -->
            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: ----"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/orderUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/orderDeliveryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address: ----"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/ordertotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: ----"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <!-- Cart Items Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart Items:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <!-- Cart Items RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/orderUserNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Number: ----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />


                <!-- Payment Details Section -->
                <TextView
                    android:id="@+id/paymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Method: ----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/orderPaymentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Status: ----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/orderpayment_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment ID: ----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <!-- Date and Time Details -->
                <TextView
                    android:id="@+id/orderdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date/Time: ----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/orderpaymentDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Date/Time: ----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="4dp" />

                <!-- Delivery Status -->
                <TextView
                    android:id="@+id/deliveryStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Status: ----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
